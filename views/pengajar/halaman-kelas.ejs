<%- include('partials/header')  %>
<%- include('partials/sidebar')  %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Ruang Kelas</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Kelas</li>
            <li class="breadcrumb-item active">Ruang Kelas</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <div class="content"></div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <div class="content">
    <div class="container-fluid">
      <div class="card card-primary card-tabs">
        <div class="card-header p-0 pt-1">
          <ul class="nav nav-tabs" id="custom-tabs-two-tab" role="tablist">
            <li class="pt-2 px-3">
              <h3 class="card-title"><%= data_kelas.ruang_kelas  %></h3>
            </li>
            <li class="nav-item">
              <a class="nav-link active" id="custom-tabs-two-home-tab" data-toggle="pill" href="#custom-tabs-two-forum" role="tab" aria-controls="custom-tabs-two-forum" aria-selected="true">Forum</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="custom-tabs-two-profile-tab" data-toggle="pill" href="#custom-tabs-two-anggota" role="tab" aria-controls="custom-tabs-two-anggota" aria-selected="false">Anggota</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="custom-tabs-two-messages-tab" data-toggle="pill" href="#custom-tabs-two-tugas" role="tab" aria-controls="custom-tabs-two-tugas" aria-selected="false">Tugas Kelas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="custom-tabs-two-settings-tab" data-toggle="pill" href="#custom-tabs-two-diskusi" role="tab" aria-controls="custom-tabs-two-diskusi" aria-selected="false">Diskusi</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="custom-tabs-two-settings-tab" data-toggle="pill" href="#custom-tabs-two-penilaian" role="tab" aria-controls="custom-tabs-two-penilaian" aria-selected="false">Penilaian</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <div class="tab-content" id="custom-tabs-two-tabContent">
            <div class="tab-pane fade show active" id="custom-tabs-two-forum" role="tabpanel" aria-labelledby="custom-tabs-two-home-tab">
              <div class="col-md-8 mx-auto">
                <div class="card card-widget widget-user">
                  <!-- Add the bg color to the header using any of the bg-* classes -->
                  <div class="widget-user-header bg-info">
                    <h3 class="widget-user-username"><%= data_kelas.mata_pelajaran  %></h3>
                    <h5 class="widget-user-desc"><%= data_kelas.nama_pengajar  %></h5>
                  </div>

                  <div class="card-footer">
                    <div class="row">
                      <div class="col-sm-6 border-right">
                        <div class="description-block">
                          <h5 class="description-header"><%= anggota_kelas.length  %></h5>
                          <span class="description-text">Anggota Kelas</span>
                        </div>
                        <!-- /.description-block -->
                      </div>
                      <!-- /.col -->
                      <div class="col-sm-6">
                        <div class="description-block">
                          <h5 class="description-header">11</h5>
                          <span class="description-text">Tugas</span>
                        </div>
                        <!-- /.description-block -->
                      </div>
                      <!-- /.col -->
                    </div>
                    <!-- /.row -->
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-3">
                    <div class="card card-primary collapsed-card">
                      <div class="card-header">
                        <h3 class="card-title">Kode Kelas</h3>

                        <div class="card-tools">
                          <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                          </button>
                        </div>
                        <!-- /.card-tools -->
                      </div>
                      <!-- /.card-header -->
                      <div class="card-body">
                        <h3><%= data_kelas.kode_kelas  %></h3>
                      </div>
                      <!-- /.card-body -->
                    </div>
                    <div class="card card-primary collapsed-card">
                      <div class="card-header">
                        <h3 class="card-title">Tugas</h3>

                        <div class="card-tools">
                          <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                          </button>
                        </div>
                        <!-- /.card-tools -->
                      </div>
                      <!-- /.card-header -->
                      <div class="card-body">
                        <p>
                          Belum ada tugas yang tersedia
                        </p>
                      </div>
                      <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                  </div>
                  <div class="col-md-9">
                    <!-- Box Comment -->

                    <!-- /.card -->
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="custom-tabs-two-anggota" role="tabpanel" aria-labelledby="custom-tabs-two-profile-tab">
              <div class="col-md-6 mx-auto">
                <h5>Pengajar</h5>
                <div class="callout callout-info">
                  <p><%= data_kelas.nama_pengajar  %></p>
                </div>
                <h5>Siswa</h5>
                <% if(anggota_kelas.length >0 ) { %>
                <% anggota_kelas.forEach((siswa) => { %>
                <div class="callout callout-info">
                  <div class="row justify-content-between align-items-center">
                    <p><%= siswa.nama_siswa  %></p>
                    <div class="btn-group">
                      <button type="button" class="btn btn-default">Action</button>
                      <button type="button" class="btn btn-primary" data-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></button>

                      <div class="dropdown-menu" role="menu">
                        <a class="dropdown-item" href="#">Keluarkan</a>

                      </div>
                    </div>
                  </div>
                </div>
                <% }) %>
                <% } else { %>
                <p>Belum ada siswa yang masuk.</p>
                <% } %>
              </div>
            </div>
            <div class="tab-pane fade" id="custom-tabs-two-tugas" role="tabpanel" aria-labelledby="custom-tabs-two-messages-tab">
              <div class="col-md-6 mx-auto">
                <div class="btn-group">
                  <button type="button" class="btn btn-info">Buat</button>
                  <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown">
                    <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <div class="dropdown-menu" role="menu">
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#modal-xl">
                      <i class="fas fa-folder-plus mr-1"></i>
                      Tugas
                    </a>
                    <a class="dropdown-item" href="#">
                      <i class="fas fa-book-reader mr-1"></i>
                      Materi
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#modal-sm">
                      <i class="fas fa-indent mr-1"></i>
                      Topik
                    </a>
                  </div>
                </div>
                <hr>
                <% if(tugas_kelas.length > 0) { %>
                  <% tugas_kelas.forEach((tugas) => { %>
                <div class="card card-primary collapsed-card my-3">
                  <div class="card-header">
                    <h3 class="card-title"><%= tugas.judul_tugas  %></h3>

                    <div class="card-tools">
                      <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                      </button>
                    </div>
                    <!-- /.card-tools -->
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <h3><%= tugas.deskripsi_tugas  %></h3>
                    <hr>
                    <div class="row justify-content-between">
                      <h4>Diserahkan :</h4>
                      <h4>0</h4>
                    </div>
                  </div>
                  <!-- /.card-body -->
                </div>
                <% }) %>
                <% } else { %>
                <p>Anda Belum Membuat Tugas</p>
                <% } %>
              </div>
              
            </div>
            <div class="tab-pane fade" id="custom-tabs-two-diskusi" role="tabpanel" aria-labelledby="custom-tabs-two-settings-tab">
              
            </div>
            <div class="tab-pane fade" id="custom-tabs-two-penilaian" role="tabpanel" aria-labelledby="custom-tabs-two-settings-tab">

            </div>
          </div>
        </div>
        <!-- /.card -->
      </div>

    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->


</div>
<!-- Main Footer -->
<footer class="main-footer">
  <!-- To the right -->
  <div class="float-right d-none d-sm-inline">Anything you want</div>
  <!-- Default to the left -->
  <strong>Copyright &copy; 2014-2021
    <a href="https://adminlte.io">Assma</a>.</strong>
  All rights reserved.
</footer>
</div>
<!-- ./wrapper -->
<%- include('components/modal-create', {kode_kelas: data_kelas.kode_kelas}) %>
